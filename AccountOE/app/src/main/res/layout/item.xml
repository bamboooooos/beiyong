<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_above="@id/lowest"
        android:text="删除"
        android:id="@+id/deleteItem"
        android:visibility="gone"/>
    <TextView
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:id="@+id/newerNumber"
        android:text="金额:"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/newerTime"
        android:text="时间"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_toLeftOf="@id/newerTime"
        android:text="类别"
        android:id="@+id/newerPurpose"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newerNumber"
        android:id="@+id/newerWhatDo"
        android:text="备注"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/lowest"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/newerWhatDo"
        android:background="@color/design_default_color_primary"/>
</RelativeLayout>
