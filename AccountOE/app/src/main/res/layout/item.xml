<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leftestOfitem"
        android:id="@+id/newerNumber"
        android:text="金额:"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/rightestOfitem"
        android:id="@+id/newerTime"
        android:text="时间"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/newerTime"
        android:layout_toRightOf="@id/newerNumber"
        android:text="类别"
        android:id="@+id/newerPurpose"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newerNumber"
        android:layout_toRightOf="@id/leftestOfitem"
        android:layout_toLeftOf="@id/rightestOfitem"
        android:id="@+id/newerWhatDo"
        android:text="备注"
        android:textSize="20sp"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/lowest"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/newerWhatDo"
        android:background="@color/design_default_color_primary"/>


    <TextView
        android:id="@+id/leftestOfitem"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/lowest"
        android:background="@color/design_default_color_primary"/>
    <TextView
        android:id="@+id/rightestOfitem"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_above="@id/lowest"
        android:layout_alignParentEnd="true"
        android:background="@color/design_default_color_primary"/>
</RelativeLayout>
